/*
 * Swanky Theme
 * Typography
 */
 
body
  line-height 1.4

h1, h2, h3, h4, h5, h6,
.h1, .h2, .h3, .h4, .h5, .h6
  font-weight: 400;
  font-family 'Open Sans', sans-serif
  text-transform uppercase
  display: block
  margin: 5px 0 10px
  
h1, .h1
  font-size 2rem

h2, .h2
  font-size 1.8rem

h3, .h3
  font-size 1.6rem
  font-weight 700

h4, .h4
  font-size 1.4rem

h5, .h5
  font-size 1.2rem

h6, .h6
  font-size 1.1rem

blockquote
  margin 20px 0
  padding 0 20px
  font-style italic
  border-left 2px solid $brand-primary
  font-size 1.8rem
  max-width 800px
  
p, ul, ol
  margin-bottom 15px
  
hr
  margin-top 40px
  margin-bottom 40px
  border 0
  border-top 1px solid $grey-lightest
  
h1, .h1
  margin 0
  display block
  padding 45px 0
  margin-bottom: 40px;
  width 100%
  font-size 2rem
  border-bottom 1px solid $grey-lightest
  
.page-header
  position fixed
  width 100%
  background #fff
  z-index 10
  top 0
  
.text-block
  border-left 2px solid #E80C7A
  padding-left 30px
  margin 0 0 20px 0