/*
 * Swanky Theme
 * Branding
 */
 
 .brand
  display block
  background #141414
  padding 20px

  .logo
    width 50px
    height 58px
    background url('../img/logo.png') no-repeat
    background-size cover
    display inline-block

  .text
    font-size 2rem
    text-transform uppercase
    color #fff
    display inline-block
    vertical-align top
    margin-left 15px
    margin-top 18px 

   &:hover, &:focus
    text-decoration none