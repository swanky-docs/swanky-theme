<%- include('../partials/header.ejs') -%>

<% if (meta.repository) { %>
<a href="<%- meta.repository -%>" title="<%-siteTitle-%> Github Repo" target="_blank" class="<%- styles.github -%>"></a>
<% } %>

<aside class="<%- styles.sidebar -%> <%- styles.col -%>">
    
  <a href="/" class="<%- styles.brand -%>"><div class="<%- styles.logo -%>"></div><div class="<%- styles.text -%>">Swanky</div></a>

  <nav class="<%-styles.navigation-%>">
    <ul class="<%-styles['list-reset'] -%>">
      <% nav.forEach((item) => { %>
        <li class="<%= (item.key === key || item.key === parentKey) ? styles.active : '' %>">
        <a href="/<%-item.path-%>" title="<%-item.title-%>"><%-item.title-%></a>
        <% if (item.children) { %>
        <ul class="<%-styles['list-reset'] -%>">
          <% item.children.forEach((child) => { %>
          <li class="<%= (child.key === key) ? styles.active : '' %>">
            <a href="/<%-child.path-%>" title="<%-child.title-%>">
              <%-child.title-%>
            </a>
          </li>
          <% }); %>
        </ul>
        <% } %>
      </li>
      <% }); %>
    </ul>
  </nav>
</aside>

<section class="<%- styles.main -%> <%- styles.clearfix -%> <%- styles.col -%>">
  <article>
    <h1 class="<%-styles['page-header']-%>"><%- title -%></h1>
    <% contents.forEach((item) => { %>
      <%- item -%>
    <% }); %>
  </article>
</section>

<%- include('../partials/footer.ejs') -%>